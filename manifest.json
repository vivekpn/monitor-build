{
  "manifest_version": 2,
  "name": "Monitor Build!",
  "version": "0.0.0.1",
  "description": "A baby step.",
  "browser_action": {
    "default_icon": "image/logo.png",
    "default_popup": "popup.html",
    "default_title": "Hi, you may want to check build status!"	
  },
  "author":"Vivek",
  "homepage_url": "https://github.com/vivekpn/monitor-build",
  "permissions": [
          "storage","http://*/","https://*/"
        ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": { "256": "image/logo.png" }
}