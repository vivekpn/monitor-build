{
  "manifest_version": 2,
  "name": "Monitor Build!",
  "version": "0.0.0.1",
  "description": "A baby step.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Hi, you may want to check build status!"	
  },
  "permissions": [
          "storage"
        ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": { "256": "icon.png" }
}